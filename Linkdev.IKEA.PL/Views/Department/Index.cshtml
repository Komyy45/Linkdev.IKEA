@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<section class="d-flex justify-content-between align-items-center">
    <div class="Title">
        <h1>Departments</h1>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-outline-primary">Create New Department</a>
    </div>
</section>
<section class="Data">
    @if(Model.Any())
    {
    <table class="table text-center table-dark table-striped table-hover">
          <thead>
              <tr>
              <th>@Html.DisplayNameFor(D => D.Code)</th>
              <th>@Html.DisplayNameFor(D => D.Name)</th>
              <th>@Html.DisplayNameFor(D => D.CreationDate)</th>
              <th>Details</th>
              <th>Edit</th>
              <th>Delete</th>
              </tr>
          </thead>
          <tbody>
            @foreach(var department in Model)
            {
                <tr class="text-capitalize">
                    <td>
                        @department.Code
                    </td>              
                    <td>
                        @department.Name
                    </td>             
                    <td>
                        @department.CreationDate
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-outline-warning">
                            <i class="fa-regular fa-eye me-2"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-outline-info">
                                <i class="fa-regular fa-pen-to-square me-2"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-outline-danger">
                            <i class="fa-solid fa-trash me-2"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-3">
            <i class="fa-solid fa-circle-info me-2 fs-4"></i>
            <h2 class="d-inline-block">There are No Departments</h2>
        </div>       
    }
</section>


