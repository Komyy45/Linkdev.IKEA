@model CreatedDepartmentDto
@{
    ViewData["Title"] = "Create";
}

<section class="row justify-content-center">
      <h1 class="col-8 mb-4">Create New Department</h1>
      <form class="col-8" asp-action="Create">
          <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

            <div class="form-group mt-3">
                <label class="form-label" asp-for="Code"></label>
                <input class="form-control" asp-for="Code" />
                <span class="text-danger" asp-validation-for="Code"></span>
            </div>
            <div class="form-group  mt-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group  mt-3">
                <label class="form-label" asp-for="Description"></label>
                <input class="form-control" asp-for="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group  mt-3">
                <label class="form-label" asp-for="CreationDate"></label>
                <input type="date" class="form-control" asp-for="CreationDate" />
                <span class="text-danger" asp-validation-for="CreationDate"></span>
            </div>

          <div class="btns d-flex justify-content-end align-items-center mt-4 gap-4">
             <input class="btn btn-success" type="submit" value="Create Department"/>
             <a class="btn btn-danger" asp-action="Index">
                <i class="fa-solid fa-right-to-bracket me-2"></i> Go Back
             </a>
          </div>
      </form>
</section>

